{
  "name": "tg-blucine-bot",
  "version": "1.0.0",
  "description": "Telegram bot for finding blu-ray release dates",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "nodemon",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint src/",
    "lint-fix": "eslint src/ --fix",
    "test": "jest --colors",
    "test-integration": "FETCH_REMOTE=1 jest --colors",
    "test-watch": "jest --watch --colors"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MiklerGM/tg-blucine-bot.git"
  },
  "author": "Michael Orlov",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/MiklerGM/tg-blucine-bot/issues"
  },
  "homepage": "https://github.com/MiklerGM/tg-blucine-bot#readme",
  "lint-staged": {
    "*.js": [
      "eslint src/",
      "jest --bail --findRelatedTests"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "nodemonConfig": {
    "ignore": [
    "**/*.test.{ts,js}",
    "**/*.spec.{ts,js}",
    ".git",
    "node_modules"
    ],
    "watch": [
    "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0",
    "@types/node-telegram-bot-api": "^0.40.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-node": "^4.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.1",
    "nodemon": "^2.0.2",
    "rewire": "^5.0.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2"
  },
  "dependencies": {
    "await-to-js": "^2.1.1",
    "axios": "^0.19.2",
    "node-telegram-bot-api": "^0.40.0",
    "node-telegram-keyboard-wrapper": "^2.0.1",
    "sentry": "^0.1.2",
    "typescript": "^3.8.3"
  }
}
